<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AppController">
	<children>
		<Canvas fx:id="canvas" height="500.0" layoutX="50.0" layoutY="150.0" width="500.0" />
		<Button fx:id="playButton" layoutX="270.0" layoutY="691.0" mnemonicParsing="false" onAction="#changeSimulationState" text="Start">
         <font>
            <Font size="18.0" />
         </font></Button>
		<ChoiceBox fx:id="templateSetter" layoutX="400.0" layoutY="725.0" prefWidth="150.0" />
		<Button fx:id="fastButton" layoutX="338.0" layoutY="34.0" mnemonicParsing="false" onAction="#changeSpeed" prefWidth="75.0" text="Fast" />
		<Button fx:id="slowButton" alignment="CENTER" layoutX="188.0" layoutY="34.0" mnemonicParsing="false" onAction="#changeSpeed" prefWidth="75.0" text="Slow" />
		<Button fx:id="normalButton" layoutX="263.0" layoutY="34.0" mnemonicParsing="false" onAction="#changeSpeed" prefWidth="75.0" text="Normal" />
		<Button fx:id="smallGridButton" layoutX="188.0" layoutY="84.0" mnemonicParsing="false" onAction="#changeGridSize" prefWidth="75.0" text="10x10" />
		<Button fx:id="mediumGridButton" layoutX="263.0" layoutY="84.0" mnemonicParsing="false" onAction="#changeGridSize" prefWidth="75.0" text="25x25" />
		<Button fx:id="bigGridButton" layoutX="338.0" layoutY="84.0" mnemonicParsing="false" onAction="#changeGridSize" prefWidth="75.0" text="50x50" />
		<Button layoutX="507.0" layoutY="685.0" mnemonicParsing="false" onAction="#clearCanvas" text="Clear" />
		<Button layoutX="50.0" layoutY="685.0" mnemonicParsing="false" onAction="#loadGrid" text="Load file" />
		<Button layoutX="51.0" layoutY="725.0" mnemonicParsing="false" onAction="#saveGrid" text="Save file" />
      <Button layoutX="400.0" layoutY="685.0" mnemonicParsing="false" onAction="#randomizeGrid" text="Randomize" />
	</children>
</AnchorPane>
