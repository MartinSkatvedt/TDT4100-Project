      <Button fx:id="bigGridButton" layoutX="440.0" layoutY="84.0" mnemonicParsing="false" onAction="#changeGridSize" prefWidth="75.0" text="50x50" />
      <Button layoutX="451.0" layoutY="672.0" mnemonicParsing="false" onAction="#clearCanvas" text="Clear" />
      <Button layoutX="53.0" layoutY="307.0" mnemonicParsing="false" onAction="#loadGrid" text="Load file" />
      <Button layoutX="53.0" layoutY="356.0" mnemonicParsing="false" onAction="#saveGrid" text="Save file" />
   </children>
</AnchorPane>
